<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
android:background="#363636">
    <LinearLayout
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/top_sq"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">
        <TextView

                android:layout_gravity="left|center_vertical"
                android:textAlignment="center"
                android:textColor="#ededed"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_clock"
                android:text="15:00"
                android:textSize="128dp"
                android:rotation="180"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#363636"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_settings_black_24dp">

            </Button>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_pause_black_24dp">

            </Button>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_replay_black_24dp">

            </Button>

<!--            <Button-->
<!--                    android:id="@+id/action_theme"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@drawable/ic_lightbulb"-->
<!--                    android:onClick="bulbClicked">-->
<!--            </Button>-->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:id="@+id/bot_sq"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">
    <TextView
            android:layout_gravity="left|center_vertical"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bot_clock"
            android:text="15:00"
            android:textSize="128dp"
    />
    </LinearLayout>

</LinearLayout>